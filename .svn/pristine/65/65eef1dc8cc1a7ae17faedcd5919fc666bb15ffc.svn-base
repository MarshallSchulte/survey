class UsersController < RegistrationsController
  
  respond_to :html, :json, :js
  
  def show
    @user = User.find(params[:id])
  end
  
  def edit
    @user = User.find(params[:id])

  end
  
  def update
    @user = User.find(params[:id])
    respond_to do |format|
      if @user.update(account_update_params)
        format.html
        format.json { respond_with_bip(@user)}
      end
    end
  end
end