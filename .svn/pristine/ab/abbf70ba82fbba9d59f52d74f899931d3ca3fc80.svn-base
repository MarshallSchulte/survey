#campaign-header{
  font-weight:bold;
  text-align:center;
  margin-top: 4%;
}

#cv-container{
  width:50%;
  background-color: #CCCCCC;
  border-radius: 10px;
  box-shadow: 5px 5px 10px rgba(0,0,0,0.5);
  margin-top: 5%;
}

.cv-header{
  font-weight:bold;
}

.cv-select{
  text-align:center;
  select{
    font-size:1.2em;
    width:100%;
    padding: 5px 0 5px 0;
  }
  a{
    display:block;
    width: 75%;
    margin: 5px auto 10px auto;
    border-width: 0 3px 3px 0;
    border-radius: 3px;
    border-color: #BBBBBB;
    border-style:solid;
    background-color: #EEEEEE;
    padding: 5px 0 5px 0;
  }
}

#campaign-form{
  width: 50%;
  background-color: #CCCCCC;
  border-radius: 10px;
  box-shadow: 5px 5px 10px rgba(0,0,0,0.5);
  margin-top: 2%;
  padding: 20px;
  .field{
    float:left;
    text-align:center;
  }
  .actions{
    text-align:center;
    input, a{
      background-color: #EEEEEE;
      padding:10px;
      margin-top: 20px;
      border-radius: 3px;
      border-width:0 3px 3px 0;
      border-style:solid;
      border-color: #AAAAAA;
    }
    input{
      font-weight:bold;
    }
  }
}

.back{
      a{
        background-color: #EEEEEE;
        padding:10px;
        margin-top: 20px;
        margin-bottom: 10px;
        border-radius: 3px;
        border-width:0 3px 3px 0;
        border-style:solid;
        border-color: #AAAAAA;
        font-size:12px;
        margin-left:25%;
        display:block;
        max-width: 150px;
        text-align:center;
      }
}

#campaign-name{
  width: 100%;
  input{
    width:100%;
  }
  label{
  }
}

.cv-form-label{
  text-align:center;
}

.cv-form-input{
  
}

.modal-body{
  width:70%;
  margin-left:auto;
  margin-right:auto;
  background-color: white;
  border-style: solid;
  border-color: gray;
  border-width: 2px 2px 2px 2px;
  border-radius: 20px;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
  #form-container{
    margin: 0 auto 0 auto;
    width:100%;
    border-style:none;
    box-shadow:0 0;
  }
}

#manager-table{
  margin-left:auto;
  margin-right:auto;
  margin-top: 3%;
}

.manager-table-header{
  border-style:solid;
  border-width: 2px;
  border-color:black;
  padding:10px;
  font-weight:bold;
  background-color:#BBBBBB;
  color:black;
}

.manager-table-data{
  border-style:solid;
  border-width: 1px;
  border-color:black;
  padding:10px;
}
