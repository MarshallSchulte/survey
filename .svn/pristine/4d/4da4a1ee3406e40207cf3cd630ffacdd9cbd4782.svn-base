}

#login-logout{
  position:absolute;
  top:0;
  right:0;
  text-align:center;
  font-weight:bold;
  margin-top:35px
}

#login{
  margin-right:10px;
}

#sign-up{

}

.login-button{
  background-color: #1F7FFF;
  border-radius:10px;
  color: white;
  padding:5px;
  border-color:transparent;
  border-width: 3px;
  border-style: solid;
}

.login-button:hover{
  border-color: #1F7FFF;
  background-color: white;
  color: #1F7FFF;
}

#banner{
  background-color: #1F7FFF;
  z-index:4;
  background-image:url("Hero13.jpg");
  background-size: cover;
  position: relative;
  min-height:700px;
  margin-top: -10%;
}

#banner-tagline{
  color:white;
  text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4);
  font-size: 3em;
  font-weight: bold;
  right:10%;
  top:70%;
  position:absolute;
}

#about-background{
  background-color: #1F7FFF;
  padding-top: 10%;
  margin-top:-10%;
  padding-bottom: 15%;
}

#about-us{
  margin-bottom:20%;
  width: 40%;
  margin: 0 auto;
  color: white;
  font-size:1.3em;
}

#about-header{
  color:white;
  text-align:center;
  margin-bottom:8%;
  font-weight: bold;
}

#contact-background{
  background-image:url('handshake.jpg');
  background-size:cover;
  margin-top: -10%;
  width: 100%;
  min-height: 675px;
  bottom:0;
  padding-top: 15%;
  padding-bottom: 15%;
}

#contact-box{
 background-color: rgba(255,255,255,0.8);
