@import "bootstrap-sprockets";
@import "bootstrap";

.container-fluid{
  padding-left: 0;
  padding-right: 0;
  
}

#navbar{
  background-color: rgba(255,255,255, 0.8);
  z-index: 5;
  position:relative;
}

