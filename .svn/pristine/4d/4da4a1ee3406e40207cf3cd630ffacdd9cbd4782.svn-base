  padding-top:30px;
  padding-bottom: 40px;
  font-size:1.2em;
  color: black;
}

#logo-holder{
  margin-left:20px;
}

#logo{
  width:100px;
  
}

.nav-button{
  color: #025BD2;
  font-size: 1.3em;
  transition: all 200ms;
  text-align:center;
  padding: 40px 10px 40px 10px;
  font-weight:bold;
  width:10%;
}

#nav-button-1:hover{
  color:white;
  background-color: #1F7FFF;
  
}

#nav-button-2:hover{
