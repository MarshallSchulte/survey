#index-header{
  text-align:center;
  font-weight: bold;
  margin-bottom: 4%;
}

.customer{
  background-color: #EEEEEE;
  border-color: #DDDDDD;
  border-style: solid;
  border-width: 1px;
  border-radius: 10px;
  margin: 10px 5% 5px 5%;
  box-shadow: 3px 3px 6px rgba(0,0,0,0.3);
  .customer-name{
    font-weight: bold;
  }
}

.industry-type{
  background-color:rgba(100,100,255,1.0);
  color: white;
  font-weight:bold;
  border-radius:5px;
  padding: 5px;
  float:left;
  margin-right:10px;
  margin-bottom: 10px;
  text-align:center;
}

.industry-type-list{
  background-color:rgba(100,100,255,1.0);
  color: white;
  font-size: 1.5em;
  font-weight:bold;
  border-radius:5px;
  padding: 15px;
  margin-right:10px;
  margin-bottom: 10px;
  text-align:center;
  margin-left:auto;
  margin-right:auto;
}

#industry-type-label{
  padding-left:0;
}

#customer-label{
  float:left;
}

#ctype-customers{
  float: left;
}

.iterator{
  font-size: 1.2em;
  text-align:left;
  font-weight:bold;
}
