#campaign-header{
  font-weight:bold;
  text-align:center;
  margin-top: 4%;
}

#nothing-header{
  text-align:center;
  margin-top: 4%;
}

#landing-page-header{
  text-align:center;
  font-weight:bold;
}

.container-header{
  text-align: center;
  margin-bottom: 20px;
}

#cv-container{
  width:70%;
  background-color: #CCCCCC;
  border-radius: 10px;
  box-shadow: 5px 5px 10px rgba(0,0,0,0.5);
  margin-top: 5%;
}

#survey-container{
  width:80%;
  background-color: #CCCCCC;
  border-radius: 10px;
  box-shadow: 5px 5px 10px rgba(0,0,0,0.5);
  margin-top: 5%;
}

.cv-header{
  font-weight:bold;
  text-align:center;
}

.cv-select{
  text-align:center;
  select{
    font-size:1.2em;
    width:100%;
    padding: 5px 0 5px 0;
  }
  a{
    display:block;
    width: 75%;
    margin: 5px auto 10px auto;
    border-width: 0 3px 3px 0;
    border-radius: 3px;
    border-color: #BBBBBB;
    border-style:solid;
    background-color: #EEEEEE;
    padding: 5px 0 5px 0;
  }
}

#campaign-form{
  width: 70%;
  background-color: #CCCCCC;
  border-radius: 10px;
  box-shadow: 5px 5px 10px rgba(0,0,0,0.5);
  margin-top: 2%;
  padding: 20px;
  .field{
    float:left;
    text-align:center;
  }
}

.back{
      a{
        background-color: #EEEEEE;
        padding:10px;
        margin-top: 20px;
        margin-bottom: 10px;
        border-radius: 3px;
        border-width:0 3px 3px 0;
        border-style:solid;
        border-color: #AAAAAA;
        font-size:12px;
        margin-left:25%;
        display:block;
        max-width: 150px;
        text-align:center;
      }
}

#campaign-name{
  width: 100%;
  input{
    width:100%;
  }
  label{
  }
}

.cv-form-label{
  text-align:center;
}

.cv-form-input{
  
}

.modal-body{
  width:70%;
  margin-left:auto;
  margin-right:auto;
  background-color: white;
  border-style: solid;
  border-color: gray;
  border-width: 2px 2px 2px 2px;
  border-radius: 20px;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
  #form-container{
    margin: 0 auto 0 auto;
    width:100%;
    border-style:none;
    box-shadow:0 0;
  }
}

#manager-table{
  margin-left:auto;
  margin-right:auto;
  margin-top: 3%;
  border-radius: 3px;
}

.manager-table-header{
  border-style:solid;
  border-width: 1px;
  border-color:black;
  padding:10px;
  font-weight:bold;
  background-color:#BBBBBB;
  color:black;
}

.manager-table-data{
  border-style:solid;
  border-width: 1px;
  border-color:black;
  padding:10px;
  text-align:center;
}

.edit-btn{
  border-radius: 5px;
  background-color: #CCCCCC;
  border-width: 0 3px 3px 0;
  border-style: solid;
  border-color: #AAAAAA;
  padding: 5px;
  display:inline-block;
  margin-left:10px;
}

.new-btn{
  border-radius: 10px;
  background-color: #CCCCCC;
  border-width: 0 3px 3px 0;
  border-style: solid;
  border-color: #AAAAAA;
  padding: 10px;
  display:inline-block;
  margin-left: 20%;
  margin-top: 3%;
}

#question-container{
  width: 70%;
  background-color: #CCCCCC;
  border-radius: 10px;
  box-shadow: 5px 5px 10px rgba(0, 0, 0, 0.5);
  margin-top: 2%;
  padding: 20px;
}

#add_field{
 padding:5px; 
 background-color: #DDDDDD;
 border-radius: 5px;
 border-style: solid;
 border-width: 0 2px 2px 0;
 border-color: #AAAAAA;
 transition: all 200ms;
}

#add_field:hover{
  color: black;
  background-color: #999999;
}

.remove_fields{

}
.remove_fields:hover{
  opacity:1.0;
  background-color: transparent;
}

  .actions{
    text-align:center;
    input, a{
      background-color: #EEEEEE;
      padding:10px;
      margin-top: 20px;
      border-radius: 3px;
      border-width:0 3px 3px 0;
      border-style:solid;
      border-color: #AAAAAA;
      transition: all 200ms;
    }
    input{
      font-weight:bold;
    }
    input:hover{
      color: black;
      background-color: #999999;
    }
  }
  
  .question-field{
    text-align:center;
    background-color: #DDDDDD;
    border-radius: 10px;
    padding: 20px;
    width:100%;
    padding-bottom: 5px;
    p{
      margin-top: 10px;
      margin-bottom:10px;
    }
    select{
      margin-right: 15px;
    }
  }
  
  #add-reviewers{
    margin-left: auto;
    margin-right:auto;
    tbody{
      tr{
        padding:5px;
        td{
          padding:5px;
        }
      }
    }
  }
  
  #reviewer-header{
    font-size:1.2em;
    font-weight:bold;
    text-align:center;
    margin-top: 8px;
  }
  
  .reviewer-field{
    width: 100%;
    text-align:center;
    background-color: #DDDDDD;
    border-radius: 10px;
    padding: 20px;
    float:left;
  }
  
  .iterator{
  font-size: 1.2em;
  text-align:left;
  font-weight:bold;
  float:left; 
}

.weight-field{
  margin-top:15px;
  margin-bottom:15px;
}

.answer-option{
  margin-top:5px;
  margin-bottom:5px;
}

.modal-backdrop{
  min-height:1000px;
}

.review-row{
  background-color: rgb(255, 232, 171);
}

td{
  border-width: 1px 1px 1px 1px;
  border-style: solid;
  border-color: #dddddd;
}

.question{
  width:100%;
  margin: 10px auto 10px auto;
  display:block;
  border-radius: 15px;
  background-color: #EEEEEE;
}

.question-row{
  margin-left:auto;
  margin-right:auto;
  th{
    text-align:center;
  }
}

.answer-row{
  margin-left:auto;
  margin-right:auto;
  text-align:center;
}

.answer{
  width:13%;
  float:left;
  text-align:center;
  margin:5px;
  font-size:12px;
  border-style: solid;
  border-width: 1px;
  border-color: #DDDDDD;
  border-radius: 10px;
  padding: 5px;
}

.survey-radio{
  text-align:center;
  margin-left:auto;
  margin-right:auto;
}

.button-row{
  text-align:center;
}

.form-button-2{
  border-radius: 5px;
  background-color: #DDDDDD;
  border-width: 0 3px 3px 0;
  border-style: solid;
  border-color: #AAAAAA;
  padding: 10px 20px;
  display: inline-block;
  margin-left: 10px;
  margin-top: 20px;
}

.progress{
  transition: width 300ms;
}

.bar_container{
    height: inherit !important;
}

.container_tiny{
  padding: 3px !important;
}

.mortice_tiny{
  height: 6px !important;
}

.progress_tiny{
