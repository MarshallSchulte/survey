@import "bootstrap-sprockets";
@import "bootstrap";

.container-fluid{
  padding-left: 0;
  padding-right: 0;
  
}

a, a:visited, a:hover, a:active {
  color: black;
}

#navbar{
  background-color: white;
  z-index: 5;
  position:relative;
  box-shadow: 0 2px 5px rgba(0,0,0,0.5);
}

#footer{
  background-color: white;
  z-index: 5;
  position:relative;
  padding-top:30px;
  padding-bottom: 40px;
  font-size:0.8em;
  color: black;
}

#logo-holder{
  margin-left:20px;
}

#logo{
  width:100px;
  
}

.nav-button{
  color: black;
  font-size: 1.3em;
  transition: all 200ms;
  text-align:center;
  padding: 42px 10px 43px 10px;
  font-weight:bold;
}

#nav-button-1:hover{
  color:white;
  background-color: #1F7FFF;
  
}

#nav-button-2:hover{
  color:white;
  background-color: #1F7FFF;
  
  
}

#nav-button-3:hover{
  color:white;
  background-color: #1F7FFF;
  
}

#nav-button-4:hover{
  color:white;
  background-color: #1F7FFF;
  
}

#search{
  display:inline-block;
  background-color:rgb(200,200,200);
  border-style:none;
  padding:5px;
  input{
    border-style:none;
    background-color:rgb(200,200,200);
    .glyphicon{
      right:20px;
    }
  }
  input:focus{
    outline:0
  }
  
}

#login-logout{
  position:absolute;
  top:0;
  right:0;
  text-align:center;
  font-weight:bold;
  margin-top:35px
}

#login{
  margin-right:10px;
}

#sign-up{

}

.login-button{
  background-color: #1F7FFF;
  border-radius:10px;
  color: white;
  padding:5px;
  border-color:transparent;
  border-width: 3px;
  border-style: solid;
}

.login-button:hover{
  border-color: #1F7FFF;
  background-color: white;
  color: #1F7FFF;
}

#banner{
  background-color: #1F7FFF;
  z-index:4;
  background-image:url("Hero13.jpg");
  background-size: cover;
  position: relative;
  height:600px;
}

#banner-info{
  background-color: rgba(0,0,0,0.7);
  height: 600px;
  width:30%;
  position:relative;
  left: 20%;
}

#banner-tagline{
  color:white;
  /*text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4);*/
  font-size: 3em;
  font-weight: bold;
  padding-top: 15%;
  text-align:center;
  position:relative;
  line-height: 120%;
}

#banner-tagline-info{
  font-size:1.5em;
  color: white;
  padding:20px;
  line-height:110%;
}

#start-button{
  background-color: #1F7FFF;
  color:white;
  font-size: 1.5em;
  font-weight: bold;
  padding:20px;
  width:200px;
  border-radius: 20px;
  margin-top: 40px;
  margin-left:auto;
  margin-right:auto;
  text-align:center;
}

#mini-page-section{
  margin-top: 3%;
  margin-right: auto;
}

#mini-page-links{
  text-align:center;
}

.link-button{
  display:inline-block;
  padding: 20px;
  font-size: 1.5em;
  font-weight: bold;
  transition: all 200ms;
  background-color: white;
  color:black;
  border-radius: 20px;
  border-style: solid;
  border-color:transparent;
  border-width:3px;
}

.link-button:visited{
  color:inherit;
}

.link-button:hover{
  background-color: #B8D6FF;
  color: black;
  border-color: white;
  text-decoration: none;
  border-style: solid;
  border-color:#333;
  border-width:3px;
}

.link-button:focus{
  background-color: #B8D6FF;
  color:black;
  text-decoration:none;
  border-style: solid;
  border-color:#333;
  border-width:3px;
}

#mini-pages{
  
}

#bottom-tagline{
  font-size: 1.8em;
  font-weight:bold;
  margin-top:10%;
  text-align:center;
}

#about-background{
  background-color: #1F7FFF;
  padding-top: 10%;
  margin-top:-10%;
  padding-bottom: 15%;
}

#about-us{
  margin-bottom:20%;
  width: 40%;
  margin: 0 auto;
  color: white;
  font-size:1.3em;
}

#about-header{
  color:white;
  text-align:center;
  margin-bottom:8%;
  font-weight: bold;
}

#contact-background{
  background-image:url('handshake.jpg');
  background-size:cover;
  margin-top: -10%;
  width: 100%;
  min-height: 675px;
  bottom:0;
  padding-top: 15%;
  padding-bottom: 15%;
}

#contact-box{
 background-color: rgba(255,255,255,0.8);
 width:500px;
 height: 400px;
 position:relative;
 border-top-right-radius: 10px;
 border-bottom-right-radius: 10px;
 padding:20px;
}

#contact-header{
  text-align:center;
  font-weight:bold;
  
}

.contact-attr{
  text-align:center;
}

.contact-row{
  padding:20px;
}

#form-header{
  font-weight:bold;
}

#form-background{
 background-image:url('pangray.png');
 background-repeat: repeat;
 position:absolute;
 min-height:700px;
 top:0;
 bottom:0;
 left:0;
 right:0;
 z-index:-1;
}

#form-container{
  background-color:white;
  border-style:solid;
  border-color:gray;
  border-width: 0 2px 0 2px;
  min-height:700px;
  max-width:800px;
  form{
    margin-left:35%;
    margin-top:20%;
  }
  a{
    margin-left:35%;
  }
}

