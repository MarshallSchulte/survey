	});
	
	$(window).load(function(){
		$('#consulting').click(function(){
			$('#consulting-page').show();
			$('#training-page').hide();
			$('#solutions-page').hide();
			$('#analytics-page').hide();
			
		});
		$('#training').click(function(){
			$('#consulting-page').hide();
			$('#training-page').show();
			$('#solutions-page').hide();
			$('#analytics-page').hide();
		});
		$('#solutions').click(function(){
			$('#consulting-page').hide();
			$('#training-page').hide();
			$('#solutions-page').show();
			$('#analytics-page').hide();
		});
		$('#analytics').click(function(){
			$('#consulting-page').hide();
			$('#training-page').hide();
			$('#solutions-page').hide();
			$('#analytics-page').show();
		});
	});
</script>
